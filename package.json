{
  "name": "fusion-meetup",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,mjs,cjs,json,css,md}\"",
    "lint": "turbo lint",
    "prepare": "husky",
    "sort-package-json": "npx sort-package-json package.json packages/*/package.json apps/*/package.json",
    "typegen": "yarn workspace @fusion/sanity build"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs,json,css,md}": "prettier --write"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.4.2",
    "typescript": "^5.7.3"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=20"
  }
}
